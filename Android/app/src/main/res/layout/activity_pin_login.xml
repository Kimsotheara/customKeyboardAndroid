<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    tools:context="com.klsoft.custom.ui.activity.PinLogInActivity">
    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPassword"
        android:textSize = "20dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <EditText
        android:id="@+id/txtPinNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="5"
        android:layout_below="@+id/lblPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lblPassword"
        android:layout_alignEnd="@+id/lblPassword"
        android:textColorHint="#ffff299f"
        android:autofillHints=""
        android:selectAllOnFocus="true">
    </EditText>
    <TextView
        android:id="@+id/lblPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPassword1"
        android:textSize = "20dp"
        android:layout_below="@+id/txtPinNumber"
        android:layout_alignRight="@+id/txtPinNumber"
        android:layout_alignEnd="@+id/txtPinNumber" />

    <EditText
        android:id="@+id/txtPinNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="5"
        android:layout_below="@+id/lblPassword1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lblPassword1"
        android:layout_alignEnd="@+id/lblPassword1"
        android:textColorHint="#ffff299f"
        android:autofillHints=""
        android:selectAllOnFocus="true">
    </EditText>
    <TextView
        android:id="@+id/lblPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPassword2"
        android:textSize = "20dp"
        android:layout_below="@+id/txtPinNumber1"
        android:layout_alignRight="@+id/txtPinNumber1"
        android:layout_alignEnd="@+id/txtPinNumber1" />

    <EditText
        android:id="@+id/txtPinNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLength="5"
        android:layout_below="@+id/lblPassword2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/lblPassword2"
        android:layout_alignEnd="@+id/lblPassword2"
        android:textColorHint="#ffff299f"
        android:autofillHints=""
        android:selectAllOnFocus="true">
    </EditText>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPinNumber2"
        android:layout_alignEnd="@+id/txtPinNumber2"
        android:layout_alignRight="@+id/txtPinNumber2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="@string/login"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.klsoft.custom.keyboard.SecureKeyboard
        android:id="@+id/secure_keyboard"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />
</RelativeLayout>
